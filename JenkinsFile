pipeline {
    agent {
        label "jenkins"
    }

    tools {
        jdk 'java17'
        maven 'maven3'  // Ensure 'Maven3' matches the exact name of your Maven installation in Jenkins
    }
    
    environment {
        APP_NAME = 'creating-pipeline'
        RELEASE = '1.0.0'
       
    }

    stages {
           stage("Setup Environment") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASSWD')]) {
                        env.IMAGE_NAME = "${DOCKER_USER}/${APP_NAME}"
                        env.IMAGE_TAG = "${RELEASE}-${env.BUILD_NUMBER}"
                    }
                }
            }
        }
        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }
        
        stage("Git Checkout") {
            steps {
                git branch: 'master', credentialsId: 'github', url: 'https://github.com/Harish667-hash/BoardgameListingWebApp.git'
            }
        }
        
        stage("Build") {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage("Build & Push Docker Image") {
            steps {
                script {
                    docker.withRegistry('', "${DOCKER_USER}:${DOCKER_PASSWD}") {
                        def dockerImage = docker.build("${IMAGE_NAME}")
                        dockerImage.push("${IMAGE_TAG}")
                    }
                }
            }
        }
    }
}